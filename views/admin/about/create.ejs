<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>About</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/about">About</a></li>
              <li class="breadcrumb-item active">Tambah</li>
            </ol>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Form ubah about</h3>
              </div>

              <form action="/about/create" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label for="paragraph1">Masukkan paragraph pertama</label>
                    <input type="text" name="paragraph1" class="form-control" id="paragraph1" placeholder="Paragraph pertama wajib diisi" />
                  </div>

                  <div class="form-group">
                    <label for="paragraph2">Masukkan paragraph kedua</label>
                    <input type="text" name="paragraph2" class="form-control" id="paragraph2" placeholder="Paragraph pertama wajib diisi" />
                  </div>

                  <div class="form-group">
                    <label for="paragraph3">Masukkan paragraph ketiga</label>
                    <input type="text" name="paragraph3" class="form-control" id="paragraph3" placeholder="Paragraph pertama wajib diisi" />
                  </div>

                  <div class="form-group">
                    <label for="paragraph4">Masukkan paragraph keempat</label>
                    <input type="text" name="paragraph4" class="form-control" id="paragraph4" placeholder="Paragraph pertama wajib diisi" />
                  </div>
                </div>

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
</div>

